<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/dogeButton"
        android:layout_width="167dp"
        android:layout_height="157dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/doge"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/simpleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:text="Click On Me!"
        app:layout_constraintBottom_toTopOf="@+id/dogeButton"
        app:layout_constraintEnd_toEndOf="@+id/dogeButton"
        app:layout_constraintStart_toStartOf="@+id/dogeButton"
        app:layout_constraintTop_toTopOf="parent" />
